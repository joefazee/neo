# Application Configuration
GO_ENV=development
APP_PORT=8080
APP_HOST=localhost
APP_NAME=Neo Prediction Platform

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=neo
DB_PASSWORD=secret
DB_NAME=neo_dev
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=168h
JWT_ISSUER=neo-platform

# Security Configuration
BCRYPT_COST=12
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m
SESSION_SECRET=session-secret-key

# Payment Provider Configuration
# Paystack
PAYSTACK_PUBLIC_KEY=pk_test_...
PAYSTACK_SECRET_KEY=sk_test_...
PAYSTACK_WEBHOOK_SECRET=paystack_webhook_secret

# Flutterwave
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-...
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-...
FLUTTERWAVE_WEBHOOK_SECRET=flutterwave_webhook_secret

# Monnify
MONNIFY_API_KEY=monnify_api_key
MONNIFY_SECRET_KEY=monnify_secret_key
MONNIFY_CONTRACT_CODE=monnify_contract_code

# KYC Provider Configuration
# Youverify
YOUVERIFY_API_KEY=youverify_api_key
YOUVERIFY_SECRET_KEY=youverify_secret_key

# Smile Identity
SMILE_IDENTITY_API_KEY=smile_identity_api_key
SMILE_IDENTITY_SECRET_KEY=smile_identity_secret_key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_NAME=Neo Platform
SMTP_FROM_EMAIL=noreply@neoplatform.com

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# File Upload Configuration
UPLOAD_MAX_SIZE=10MB
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf
UPLOAD_PATH=uploads/

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Authorization,Content-Type,X-Requested-With
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
AUTH_RATE_LIMIT=5
BET_RATE_LIMIT=10
MARKET_RATE_LIMIT=100
WEBSOCKET_RATE_LIMIT=1000

# Feature Flags
ENABLE_KYC_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=true
ENABLE_MARKET_SAFEGUARDS=true
ENABLE_HOUSE_BOT=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_AUDIT_LOGGING=true

# Market Configuration
DEFAULT_RAKE_PERCENTAGE=0.05
DEFAULT_CREATOR_REVENUE_SHARE=0.50
MIN_QUORUM_AMOUNT=5000.00
HOUSE_BOT_AMOUNT=10000.00
MAX_BET_AMOUNT=50000.00
MIN_BET_AMOUNT=100.00

# Monitoring & Observability
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_ENDPOINT=/health
PROMETHEUS_ENDPOINT=/metrics

# External API Configuration
TIMEZONE=Africa/Lagos
BASE_URL=http://localhost:8080
FRONTEND_URL=http://localhost:3000

# Development Tools
ENABLE_SWAGGER=true
ENABLE_PROFILER=false
DEBUG_SQL=false
